# Prisma
DATABASE_URL="file:./prisma/dev.db"

# NextAuth
AUTH_SECRET="deepo-super-secret-key-2024-jwt-token-encryption-key-very-long-and-secure"
NEXTAUTH_URL="http://localhost:3000"

# OpenAI
OPENAI_API_KEY="your-openai-api-key-here"

# Unas API konfiguráció (Phase 6: Webáruház integráció)
UNAS_API_KEY="your-unas-api-key-here"
UNAS_API_URL="https://api.unas.eu/shop"

# Unas Szinkronizáció Scheduler (Phase 6: Időzített szinkronizáció)
UNAS_SYNC_CRON_PATTERN="0 */6 * * *"
UNAS_SYNC_ENABLED="true"
UNAS_SYNC_LOG_LEVEL="info"
UNAS_SYNC_MODE="incremental"
UNAS_SYNC_BATCH_SIZE="10"
UNAS_SYNC_MAX_API_CALLS="50"

# Unas Tömeges Import (Phase 6: Bulk import)
UNAS_BULK_BATCH_SIZE="20"
UNAS_BULK_MAX_PRODUCTS="100"
UNAS_BULK_DELAY="1000"
